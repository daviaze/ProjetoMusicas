<div class="container">

<h3 class="cor-texto text-center display-4 text-white"> Showing Album </h3>

<div class="row">
  <div class="form-group col-md-6">
    <b class="text-dark"> <%= link_to "Back", "/albums", class:"btn btn-primary col-6" %> </b>
</div>

<div class="form-group col-md-6 d-flex justify-content-end">
    <%= link_to  "Edit", edit_album_path, class:"btn btn-primary col-6"%>
  </div>
</div>

<fieldset class="card text-white bg-secondary list-group-item mb-1">
  <div class="card-body text-justify">
    <h5 class="card-title"><%= @album.title %></h5>
    <h5 class="card-title">Artist : <%= @album.artist.name %></h5>
    <p class="card-text"><fieldset>
    <b> ID: </b> <%= @album.id %> <br>
    <b> Created at: </b> <%= (@album.created_at) %> <br>
    <b> Updated at: </b> <%= (@album.updated_at) %> <br>
    </fieldset>
</div>
</div>
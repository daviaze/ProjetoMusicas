<h1>Edit Track</h1>
<%= form_for @track, :url =>{:action => "update", :id =>@track} do |f| %>
    <p>Name:         <%= f.text_field 'name' %></p>
    <p>Album:        <%= f.select :album_id ,options_for_select(@albums.collect{ |a| [a.title, a.id] })%>
    <p>Media Type:   <%= f.select :media_type_id ,options_for_select(@mediatypes.collect{ |a| [a.name, a.id] })%>
    <p>genre_id:     <%= f.select :genre_id ,options_for_select(@genres.collect{ |a| [a.name, a.id] })%>
    <p>Composer:     <%= f.text_field 'composer' %></p>
    <p>Milliseconds: <%= f.text_field 'milliseconds' %></p>
    <p>Bytes:        <%= f.text_field 'bytes' %></p>
    <p>Unit Price:   <%= f.text_field 'unit_price' %></p>
    <%= f.submit "Save changes" %>
<% end %>

<%= link_to 'Back', :back  %> 
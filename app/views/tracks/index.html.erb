<br><br>
<h3 class="cor-texto text-center display-4"> All Tracks </h3>

<div class = container>
  <div class="row">
    <div class="form-group col-md-6 ">
      <%=link_to "Create track", new_track_path, class:"btn btn-primary col-6"%>
    </div>
    <div class="form-group col-md-6 ">
      <%= form_tag("/tracks", method: "get") do %>
      <div class="input-group mb-1 d-flex justify-content-end">
        <div class="input-group-prepend">
          <label class="input-group-text">Filter</label>
        </div>
        <%= text_field_tag(:name, params['name'], class: "form-control col-4") %>
        <div class="input-group-prepend">
          <%= submit_tag("Submit", class: 'btn btn-primary') %>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <div class="list-group list-group-flush linha">
    <%@tracks.each do |track|%>
    <div class="retira-link">
      <%= link_to track.name, track, class:"card text-white bg-secondary list-group-item mb-1"%>
    </div>
    <% end %>
  </div>
</div>
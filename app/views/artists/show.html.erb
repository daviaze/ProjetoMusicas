<br>

<div class="col-9 mx-auto">
    <div class="text-center">
        <h3><%= @artist.name %>'s Albums <span class="badge bg-info text-dark"><%= @albums.count %></span></h3>
        <div class="btn-group col-12 p-0">
            <%= link_to  "EDIT ARTIST", edit_artist_path, class: "new-button col-6" %>
            <%= link_to  "BACK", '../', class:"new-button col-6" %>
        </div>
    </div>
</div>

<div class="mx-auto text-center mt-2">
    <% @albums.each do |album|%>
        <div class="artist-card" style="height: 12rem;">
            <span class="small mt-2 text-center font-weight-bold"><%= album.title.upcase %></span>
            <div class="d-block text-left mt-auto">
                <span class="small text-muted font-weight-bold">TRACKS: </span>
                <span class=""><%= Track.where(album_id: album.id).count %></span>
                <br>
                <span class="small text-muted font-weight-bold">CREATED AT:</span>
                <span class=""><%= format(album.created_at) %></span>
                <br>
                <span class="small text-muted font-weight-bold">UPDATED AT:</span>
                <span class=""><%= format(album.updated_at) %></span>
            </div>

            <div class="btn-group mt-auto mb-2 ">
                <a href="../albums/<%= album.id %>/edit" class="col-6 btn btn-secondary ">Edit</a>
                <%= link_to 'See more', album ,class:"col-6 btn btn-secondary"%>
            </div>
        </div>
    <%end%>
    <div class="artist-card">
        <span class="mt-2 small font-weight-bold">CREATE NEW ALBUM</span>
        <%= link_to '+', new_album_path(:artist_id => @artist.id), class:"btn btn-outline-dark mt-5 w-25 mx-auto rounded-pill" %>
    </div>
</div>